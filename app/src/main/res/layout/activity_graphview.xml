<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_view"
        android:layout_width="450dip"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_toStartOf="@+id/graph_view"
        android:text="Bar"
        app:layout_constraintBottom_toTopOf="@+id/btn_line"
        app:layout_constraintEnd_toStartOf="@+id/graph_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_bar"
        android:layout_below="@+id/btn_bar"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="8dp"
        android:text="Line"
        app:layout_constraintBottom_toTopOf="@+id/btn_comb"
        app:layout_constraintEnd_toStartOf="@+id/graph_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bar" />

    <Button
        android:id="@+id/btn_comb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_line"
        android:layout_below="@+id/btn_line"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="8dp"
        android:text="Comb."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/graph_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_line" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="34dp"
        android:text="Graph View Selection"
        app:layout_constraintBottom_toTopOf="@+id/btn_bar"
        app:layout_constraintEnd_toStartOf="@+id/graph_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>