<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uco.avalon.ManageTypesFragment">

    <EditText
        android:id="@+id/typeNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:selectAllOnFocus="true"
        android:inputType="textPersonName"
        android:hint="Name of Equipment Type" />

    <Button
        android:id="@+id/addTypeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/typeNameEdit"
        android:layout_marginTop="25dp"
        android:ems="7"
        android:text="Add Type" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/deleteTypeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/typeSpinner"
        android:layout_marginTop="50dp"
        android:background="#EE0000"
        android:ems="7"
        android:text="Delete Type" />

</RelativeLayout>
